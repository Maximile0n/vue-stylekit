            width 90px

        &--carusel
          .promo-tv-channel__img
            width 110px

        &--ntv
          .promo-tv-channel__img
            width 65px

        &--rossia1
          .promo-tv-channel__img
            width 125px

        &--muztv
          .promo-tv-channel__img
            width 55px

        &--sony
          .promo-tv-channel__img
            width 62px

        &--paramount
          .promo-tv-channel__img
            width 77px

        &--romans
          min-height 110px

          .promo-tv-channel__img
            width 65px

        &--mtv
          min-width 130px

          .promo-tv-channel__img
            width 65px

        &--matchtv
          .promo-tv-channel__img
            width 85px

        &--rentv
          .promo-tv-channel__img
            width 47px

