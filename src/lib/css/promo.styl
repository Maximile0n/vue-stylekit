.vip-iphone
  width: 381px
  height: 451px
  background-image: url('/static/images/iphone.png')
  background-size: cover
  position: relative
  @media (max-width: 767px)
    background-image: none
    height: auto
.vip-iphone:before
  width: 55%;
  height: 110px;
  background-image: url('/static/images/IPhoneeye.png')
  background-repeat: no-repeat
  background-size: contain
  position: absolute
  left: 0
  right: 0
  margin-left: auto
  margin-right: auto
  top: 22px
  z-index: 10
  content: ''
  @media (max-width: 767px)
    background-image: none

.vip-iphone__inner
  width: 86.9%;
  height: 94.6%;
  border-radius: 36px 36px 0 0;
  position: absolute;
  bottom: 0;
  left: 0.5%;
  right: 0
  margin-left: auto
  margin-right: auto
  overflow: hidden
  @media (max-width: 767px)
    height: auto
    position: relative
  &:before
    content: ''
    width: 190%;
    transform: rotate(17deg);
    height: 300%;
    background-image: url(/static/images/iphoneBg.png);
    position: absolute
    -webkit-background-size: contain
    -moz-background-size: contain
    background-size: contain
    top: -120%
    right: -105%
    background-repeat:no-repeat
    transition-timing-function cubic-bezier(.77,.34,.39,.77)
    transition-duration 1s
    transition-property top, right, transform, width, height
    @media (max-width: 767px)
      background-image: none
    .vip-iphone--step-2 &
      transform: rotate(-34deg)
      top: -200%
      right: -90%
      width: 220%
    .vip-iphone--step-3 &
      transform: rotate(-75deg)
      top: -203%
      right: -20%
      width: 220%
    .vip-iphone--step-4 &
      transform: rotate(-165deg);
      top: -203%;
      right: 90%;
      width: 220%;

.vip-iphone-count
  position: absolute
  bottom: 4%
  left: 5%
  right: 0
  margin-left: auto
  margin-right: auto
  font-size: 14px
  color white
  text-align: center



.vip-iphone-text
  position: absolute
  top: 45%
  width: 55%
  left: 5%
  right: 0
  margin-left: auto
  margin-right: auto
  font-size: 16px
  color white
  line-height: 24px
  opacity: 1
  visibility: visible
  transition-timing-function ease-in-out
  transition-duration .5s
  transition-property opacity
  @media (max-width: 767px)
    position: relative
    opacity: 1
    visibility: visible
    &+&
      padding-top: 40px


