      padding-top 10px

    &__image
      width 100%

    &__pseudo-item
      opacity .3

    &__info
      margin-top vertical-space * .5
      opacity .5

    &__label
      max-width 100%
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      -ms-text-overflow ellipsis

  &-full-width-img
