.promo
  &-color-line
    display flex
    flex-direction row
    min-width 100vw
    height calc(100vh - 74px)
    position relative

    @media (max-width: mobile-upper-limit)
      height initial
      min-height initial
      padding-top 150px
      padding-bottom 100px

  &-title
    margin-top -45px
    margin-bottom vertical-space * 1.75

  &-left-line-image
    width 1286px
    height 100%
    background-position right center
    background-size cover
    position absolute
    top 0
    bottom 0
    -webkit-background-size cover

    @media (max-width: 1625px)
      left calc(66.66vw - 1345px)

    @media (max-width: 1881px) and (min-width: 1476px)
      left calc(100vw - 1476px - 405px)

    @media (min-width: 1881px)
      left 0

  &-reg-app
