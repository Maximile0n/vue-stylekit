.{newAppName}-row-list
  &__header
    display flex

    &--has-more-content
      cursor pointer

    @media (max-width: iphone8)
      flex-direction column

  &__body
    max-height 0
    overflow hidden
    opacity 0
    top -40px
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property height, max-height, padding, opacity, top

    &--has-icon-padding
      padding-left 76px

    .{newAppName}-row-list__item--active &
      max-height 200vh
      padding-top vertical-space * 1.5
      opacity 1
      top 0

  &__item
    display flex
    flex-direction column
    padding-top vertical-space * .5
    padding-bottom vertical-space * .5

    @media (max-width: iphone8)
      flex-direction column

    &+&
      border-top 1px solid card-list-border

  &__icon
    display flex

    @media (max-width: iphone8)
      flex-direction column
      justify-content left
      align-items start
      min-height fit-content
      padding-top vertical-space * .5
      padding-bottom vertical-space * .5

    align-items center

  &__content
    display flex

    @media (max-width: iphone8)
      flex-direction column
      justify-content left
      align-items start
      min-height fit-content

    align-items center

  &__option
    display flex

    @media (max-width: iphone8)
      flex-direction column
      justify-content left
      align-items start
      min-height fit-content

  &__value
    display flex
    justify-content flex-end
    align-items center

    @media (max-width: mobile-upper-limit)
      justify-content flex-start
      align-items start

    @media (max-width: iphone8)
      flex-direction column
      min-height fit-content
      padding-top vertical-space * .5

.{b2bAppName}-profit
  .{newAppName}-row-list__header
    width 70%
    max-width 500px
    margin 0 auto
    padding-top 15px
    padding-bottom 15px

    @media (max-width: tablet-upper-limit)
      width 90%

    @media (max-width: mobile-upper-limit)
      flex-direction row
      width 100%
      max-width none

  &+&
    border-top none

  .{newAppName}-row-list__icon
    flex-shrink 0
    flex-basis 80px
    align-items initial
    width 80px
    height 80px
    text-align center
    background-position 50% 0
    background-size contain
    background-repeat no-repeat
    margin-right 20px

  .{newAppName}-font-paragraph
    margin-bottom 5px

.{b2bAppName}-services
  .{newAppName}-row-list__header
    width 100%
    align-items center
    max-width auto
    padding 0
  .{newAppName}-row-list__icon
    flex-basis 50px
    width 50px
    height 50px
    background-position-y 50%

.{b2bAppName}-company-profits
  .{newAppName}-row-list__header
    flex-direction column
    text-align: center
    width 100%
  .{newAppName}-row-list__icon
    margin-right 0
    align-self center
    margin-bottom vertical-space

.ovh
  overflow hidden

.{b2bAppName}-profit-list
  padding 50px 80px
  @media (max-width: tablet-upper-limit)
    padding 30px 20px
  @media (max-width: mobile-upper-limit)
    padding 30px 40px
  .rt-container
    @media (max-width: desktop-upper-limit)
      padding 0
