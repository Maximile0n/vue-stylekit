@require "~nib/lib/nib/vendor.styl"
.input-element
  width 100%
  color main-color
  background-color transparent
  border none
  outline none
  padding-bottom 10px
  padding-right 23px
  position relative
  z-index 2
  appearance field
  placeholder(color b2c-black07,)
  .input--with-button &
    padding-right horizontal-space * 3

  &[disabled]
    color b2c-cool-grey03
    placeholder(color b2c-black03,)


  .{newAppName}-input--white &,
  .{newAppName}-card--has-white-color &
    color white

    .{newAppName}-dark-theme &
      color white

  .{newAppName}-dark-theme &
    color #fff

  .{newAppName}-card &
    color main-color

.input-clear
  position absolute
  top 25px
  right 0
  z-index 2
  cursor pointer
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity, transform
  animation .3s showClearInput ease-in-out

  &:hover
    transform rotate(180deg)

.input-clear__icon
  fill b2c-black

  .{newAppName}-dark-theme &,
  .{newAppName}-input--white &
    fill white

  .{newAppName}-card &
    fill b2c-black

  .{newAppName}-card--has-white-color &
    fill white

.input-arithmetic
  position absolute
  top 25px
  right 0
  z-index 2

.input-arithmetic__button
  cursor pointer

  &+&
    margin-left horizontal-space * .5

.input-arithmetic__button-icon
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property stroke
  stroke b2c-black

  .{newAppName}-dark-theme &
    stroke b2c-white

.input-label
  font-size: 12px
  color b2c-black05
  margin-top: 3px
  line-height: 16px
  .{newAppName}-dark-theme &
    color b2c-white05
@keyframes showClearInput
  0%
    opacity 0
    visibility hidden
    transform rotate(60deg)

  50%
    opacity .3
    visibility visible
    transform rotate(60deg)

  100%
    opacity .7
    visibility visible
    transform rotate(0)
