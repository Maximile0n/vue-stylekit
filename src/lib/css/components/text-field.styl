.text-field
  display inline-block
  width 100%
  height 52px
  box-sizing border-box
  padding-top 22px
  position relative

  &__line
    width 100%
    height 2px
    background-color b2c-cool-grey
    position absolute
    bottom 0
    left 0
    right 0
    z-index 1
    transition-timing-function ease-in-out
    transition-duration .2s
    transition-property background, height
    pointer-events none
    -webkit-appearance none
    appearance none
    -moz-appearance none

    .textarea &
      position relative

    &:before
      content ""
      width 0
      height 100%
      background b2c-purple
      position absolute
      transition-timing-function ease-in-out
      transition-duration .4s
      transition-property background, width

      .{newAppName}-dark-theme &
        background b2c-orange

    .select__inner:focus+&,
    .select:hover &,
    .select--is-open &,
    .input-element:hover+&,
    .input-element:focus+&,
    .textarea-element:hover+&,
    .textarea-element:focus+&
      &:before
        width 100%

    .select--disabled &,
    .input-element[disabled]+&,
    .textarea--disabled &
      height 2px
      background-color transparent
      border-bottom 2px main-color03 dashed

      .{newAppName}-dark-theme &
        border-bottom 2px b2c-white03 dashed

      &:before
        width 0
        height 0

    .text-field--error &
      height 2px

      &:before
        width 100%
        background-color error-color

  &__error-message
    color error-color-text
    font-size 12px
    line-height 16px
    opacity 0
    visibility hidden
    position absolute
    bottom -17px
    left 0
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property opacity, visibility

    &--has-label
      bottom -20px

    .text-field--error &
      opacity 1
      visibility visible

.password-icon
  position: absolute
  right: 0
  top: 30px
  cursor pointer
  z-index 2

.password-hidden
  top 35px
