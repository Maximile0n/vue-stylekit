.text-field
  display inline-block
  width 100%
  height 49px
  box-sizing border-box
  padding-top 22px
  position relative

  &__line
    width 100%
    height 2px
    background-color b2c-cool-grey
    position absolute
    bottom 0
    left 0
    right 0
    z-index 1
    transition-timing-function ease-in-out
    transition-duration .2s
    transition-property background, height
    pointer-events none
    -webkit-appearance none
    appearance none
    -moz-appearance none
    &--transparent
      background-color: transparent

    .textarea &
      position relative

    &:before
      content ""
      width 0
      height 100%
      background b2c-purple
      position absolute
      transition-timing-function ease-in-out
      transition-duration .4s
      transition-property background, width

      .{newAppName}-dark-theme &
        background b2c-orange

    .select__inner:focus+&,
    .select:hover &,
    .select--is-open &,
    .input-element:hover+&,
    .input-element:focus+&,
    .textarea-element:hover+&,
    .textarea-element:focus+&
      &:before
        width 100%

    .select--disabled &,
    .input-element[disabled]+&,
    .textarea--disabled &
      height 2px
      background-color transparent
      border-bottom 2px main-color03 dashed

      .{newAppName}-dark-theme &
        border-bottom 2px b2c-white03 dashed

      &:before
        width 0
        height 0

    .text-field--error &
      height 2px

      &:before
        width 100%
        background-color error-color!important

  &__error-message
    color error-color-text
    font-size 12px
    line-height 16px
    opacity 0
    visibility hidden
    position absolute
    bottom -17px
    left 0
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property opacity, visibility

    &--has-label
      bottom -20px

    .text-field--error &
      opacity 1
      visibility visible

.password-icon
  position: absolute
  right: 0
  top: 30px
  cursor pointer
  z-index 2

.password-hidden
  top 35px

.{b2bAppName}-input
  .text-field
    padding 30px 20px 0
    height 60px
    @media (max-width: tablet-upper-limit)
      height auto
  .{b2bAppName}-text-field__error-message
    position relative
    background-color error-color
    color b2c-white
    top -30px
    transform translateY(-50%)
    width auto
    min-width 200px
    padding 10px
    box-sizing border-box
    z-index 3
    //min-height 60px
    height auto
    bottom auto
    &:before
      position absolute
      content: ''
      top 50%
      width: 0
      height: 0
      transform translateY(-50%)
    &--on-the-left
      left calc(100% + 35px)
      &:before
        left -7px
        border-style: solid
        border-width: 7px 7px 7px 0
        border-color: transparent error-color transparent transparent
      @media (max-width: tablet-upper-limit)
        position relative
        top auto
        left -21px
        right -21px
        bottom 0
        transform none
        padding 5px 20px
        width calc(100% + 42px)
        min-height auto
        &:before
          border none
    &--on-the-right
      right calc(100% + 35px)
      left auto
      &:before
        right -7px
        border-style: solid
        border-width: 7px 0 7px 7px
        border-color: transparent transparent transparent error-color
      @media (max-width: mobile-upper-limit)
        position relative
        top auto
        left -21px
        right -21px
        bottom 0
        transform none
        padding 5px 20px
        width calc(100% + 42px)
        min-height auto
        &:before
          border none
  .input-element[disabled] + .text-field__line
    border 1px solid rgba(b2c-cool-grey, .5)

.text-field--orange
  .text-field__line:before
    background-color b2c-orange
  .input-element:focus + .text-field__border
    border-color b2c-orange


.text-field--purple
  .text-field__line:before
    background-color b2c-purple
  .input-element:focus + .text-field__border
    border-color b2c-purple
