.text-field
  display inline-block
  width 100%
  height 52px
  box-sizing border-box
  padding-top 22px
  position relative

  &__line
    width 100%
    height 1px
    background-color form-elements-border-color
    position absolute
    bottom 0
    left 0
    right 0
    z-index 1
    transition-timing-function ease-in-out
    transition-duration .2s
    transition-property background, height
    pointer-events none
    -webkit-appearance none
    appearance none
    -moz-appearance none

    .textarea &
      position relative

    &:before
      content ""
      width 0
      height 100%
      background b2c-purple-low
      position absolute
      transition-timing-function ease-in-out
      transition-duration .4s
      transition-property background, width
      -webkit-appearance none
      appearance none
      -moz-appearance none

    .select__inner:focus+&,
    .select:hover &,
    .select--is-open &,
    .input-element:hover+&,
    .input-element:focus+&,
    .textarea-element:hover+&,
    .textarea-element:focus+&
      height 2px

      &:before
        width 100%

    .select--disabled &,
    .input-element[disabled]+&,
    .textarea--disabled &
      height 2px
      background-color transparent
      background-image url("data:image/svg+xml;utf8,<svg width='5' height='2' xmlns='http://www.w3.org/2000/svg'><path d='M.535 1.25h5.528' stroke='" + b2b-gray + "' fill='none' fill-rule='evenodd' stroke-dasharray='3' stroke-linecap='square'/></svg>")

      &:before
        width 0
        height 0

    .text-field--error &
      height 2px

      &:before
        width 100%
        background-color error-color

  &__error-message
    color error-color
    font-size 14px
    opacity 0
    visibility hidden
    position absolute
    bottom -20px
    left 0
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property opacity, visibility

    .text-field--error &
      opacity .5
      visibility visible

    &:hover
      opacity 1
