.rt-youtube
  display: inline-block
  position: relative
  height 56.25%
  width 100%
  background-color: #000
  box-shadow 0 0 10px 0 #000
  padding-bottom: 56.25%;
  padding-top: 25px;
  iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.rt-youtube__controls
  position: absolute
  z-index: 1
  top: 0
  bottom: 0
  left: 0
  right: 0

.rt-youtube__control-icon
  width: 27px
  height: 30px

.rt-youtube__play,
.rt-youtube__pause
  background-color: b2c-purple-low
  width: 50px
  height: 50px
  cursor: pointer
  fill #fff
  border-radius 50%
  margin auto
  position: absolute
  display: flex
  justify-content  center
  align-items center
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity, visibility
  right: 0
  left: 0
  bottom: 20px
.rt-youtube__play
  .rt-youtube &
    opacity: 0.5
    visibility: visible
    &:hover
      opacity: 1
  .rt-youtube--is-active &
    opacity: 0
    visibility: hidden

.rt-youtube__pause
  .rt-youtube &
    opacity: 0
    visibility: hidden
  .rt-youtube--is-active &
    opacity: 0
    visibility: visible
  .rt-youtube--is-active:hover &
    opacity: 0.5

  .rt-youtube--is-active:hover &:hover
      opacity: 1
.rt-youtube___not-ready
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  display: flex
  align-items center
  justify-content center
.rt-youtube___pause-image
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-size: cover
  background-position: center
  .rt-youtube--is-active &
    opacity: 0
    visibility: hidden
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property opacity, visibility

.rt-youtube__next
  position: absolute
  z-index: 1
  background-color: b2c-purple-low
  width: 50px
  height: 50px
  cursor: pointer
  fill #fff
  right: 20px
  top: 0
  bottom: 0
  margin auto
  opacity: 0
  visibility: hidden
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity, visibility
  cursor: pointer
  border-radius 50%
  display: flex
  justify-content  center
  align-items center

  .rt-youtube--is-active:hover &
    opacity: 0.5
    visibility: visible
    &:hover
      opacity: 1

.rt-youtube__volume
  position: absolute
  bottom: 20px
  left: 20px

.rt-youtube__volume__line
  width: 100px
  height: 5px
  border-radius 3px
  background-color: rgba(255,255,255,0.3);
  z-index: 2
  position: absolute
  box-shadow 1px 1px 1px rgba(0,0,0,0.4)
  cursor: pointer

.rt-youtube__volume__now-line
  height: 5px
  background-color: b2c-purple-low
  border-radius 3px
  position: absolute
  left: 0
  top: 0
  bottom: 0

.rt-youtube__volume__point
  position: absolute
  width: 15px
  height: 15px
  top: -5px
  margin-left: -5px
  background-color: #fff
  border-radius 50%
  box-shadow 0px 0px 2px rgba(0,0,0,0.8)
  cursor: pointer
