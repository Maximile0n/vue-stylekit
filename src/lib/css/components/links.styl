.{newAppName}-link
  cursor pointer
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property color
  color b2c-purple
  .{newAppName}-dark-theme &
    color b2c-orange

.{newAppName}-link--orange
  color b2c-orange

.{newAppName}-link--blue
  color b2c-light-blue-low

  &:hover
    color rgba(b2c-light-blue-low, .7)
