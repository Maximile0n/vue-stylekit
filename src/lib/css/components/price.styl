.{newAppName}-price
  color b2c-black07
  font-weight 400
  white-space nowrap
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, color

  .{newAppName}-dark-theme &
    color b2c-white07

  .{newAppName}-card &
    color inherit

  .{newAppName}-card--has-white-color &
    color white
    opacity .9

  &__opinion
    display inline-block
    font-size 24px
    line-height 31px
    vertical-align baseline

  &__old-value
    display inline-block
    font-size 24px
    line-height 31px
    position relative
    vertical-align baseline
    opacity: 0.7
    margin-right: 10px
    &:before
      content ""
      display inline-block
      width 100%
      height 1px
      border-bottom 1px solid b2c-black
      margin-top auto
      margin-bottom auto
      position absolute
      top 0
      bottom 0
      transition-timing-function ease-in-out
      transition-duration .4s
      transition-property background

      .{newAppName}-dark-theme &
        background-color b2c-white07

      .{newAppName}-card &
        background-color b2c-black07

      .{newAppName}-card--has-white-color &
        background-color b2c-white07

  &__option-value
    display inline-block
    font-size 54px
    line-height 45px
    padding-left 5px
    padding-right 5px
    vertical-align baseline

  &__value
    display inline-block
    height 42px
    color main-color09
    font-size 54px
    line-height 47px
    font-weight 400
    padding-left 5px
    padding-right 5px
    vertical-align baseline
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property color

    .{newAppName}-price-without-space &
      margin-top 0

    .{newAppName}-dark-theme &
      color b2c-white07

    .{newAppName}-card &
      color main-color09

    .{newAppName}-card--has-white-color &
      color b2c-white07

  &__info
    display inline-block
    font-size 14px
    text-align center
    vertical-align baseline

    &-item
      & + &
        border-top 1px solid b2c-black07
        transition-timing-function ease-in-out
        transition-duration .4s
        transition-property border

        .{newAppName}-card--has-white-color &
          border-top-color white

        .{newAppName}-dark-theme &
          border-color b2c-white07

        .{newAppName}-card &
          border-color b2c-black07

        .{newAppName}-card--has-white-color &
          border-color b2c-white07
