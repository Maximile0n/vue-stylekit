.{newAppName}-benefit
  &-block
    width 100%
    padding-top 60px
  &-item
    margin-bottom 60px
    &__step,
    &__icon
      margin-bottom 20px
      &-background
        border-radius 50%
        position relative
        .{newAppName}-benefit-item__icon
          position absolute
          top 50%
          left 50%
          transform translateY(-50%) translateX(-50%)
    &__image
      margin-bottom: 20px
      &>img
        width 100%
    &__text
      .{newAppName}-font-small-paragraph
        opacity .7
    &--center
      text-align: center
      .{newAppName}-benefit-item__icon
        margin 0 auto 20px
    &--inline
      display flex
      .{newAppName}-benefit-item__icon
        flex-basis 80px
        margin-bottom: 0
      .{newAppName}-benefit-item__text
        margin-left: 20px

.rbi-pr70
  @media(min-width: laptop-lower-limit)
    padding-right 70px

.rbi-pr1c
  @media(min-width: laptop-lower-limit)
    padding-right calc(50% * 1 / 6 + 10px)
