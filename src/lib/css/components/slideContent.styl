.rt-slide-content-vertical-content
  max-height 0
  overflow hidden
  opacity 0
  visibility hidden
  position relative
  top -20px
  transition-timing-function ease-in-out
  transition-duration .5s
  transition-property max-height, opacity, visibility, top, height
  pointer-events none

  &--is-active
    max-height 2000 px
    opacity 1
    visibility visible
    top 0
    pointer-events all

.rt-slide
  padding-bottom 10px

  &+&
    &:not(.rt-slide--without-border)
      border-top 1px solid main-color02
      padding-top 20px

  &__header
    padding-top 20px
    padding-bottom 20px
    padding-left 30px
    position relative
    cursor pointer

  &__arrow
    height 13px
    margin-top auto
    margin-bottom auto
    position absolute

    transition-timing-function ease-in-out
    transition-duration .5s
    transition-property transform


    .rt-slide--is-active &
      transform rotate(90deg)

  &__content
    max-height 0
    overflow hidden
    padding-left 30px
    opacity 0
    visibility hidden
    position relative
    transition-timing-function ease-in-out
    transition-duration .5s
    transition-property max-height, opacity, visibility, padding-bottom

    .rt-slide--is-active &
      max-height 3000px
      padding-bottom 10px
      opacity 1
      visibility visible
.rt-slide__arrow--left-right
  top 0
  bottom 5px
  left 0
.rt-slide__arrow--right-bottom
  top 0
  bottom 5px
  right 0
  transform rotate(90deg)
  .rt-slide--is-active &
    transform rotate(-90deg)

