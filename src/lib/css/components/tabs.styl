.{newAppName}-tabs
  width 100%
  font-size 18px
  &-content
    border-top 1px solid main-color01
    .{newAppName}-row-list__item
      padding-top vertical-space * 2
      padding-bottom vertical-space * 2
      @media (max-width: mobile-upper-limit)
        padding-top vertical-space
        padding-bottom vertical-space
        &+.{newAppName}-row-list__item
          border-top none
          padding-top: 0
  &--vertical
    display flex
    .{newAppName}-tabs-navigation
      flex-direction: column
      margin 0
      white-space unset!important
      width 100%
      &-wrapper
        width 34%
        padding-right calc((100% + 20px) / 12)
        border-left 1px solid main-color01
        display inline-table!important
      &__item
        position relative
        display block
        &+.{newAppName}-tabs-navigation__item
          margin-top vertical-space * .5
        &:before
          position absolute
          content ''
          top 0
          left -1px
          width 2px
          height 0
          border-bottom none
          text-shadow 0 0 0
          border-left 2px solid transparent
          transition-timing-function ease-in-out
          transition-duration .2s
          transition-property border, height, text-shadow
        &:hover,
        &:focus,
        &--is-active
          &:before
            height 100%
            border-left-color b2c-purple
      &__item-name
        &:before
          display none
    .{newAppName}-tabs-content
      border-top none
      //padding-left vertical-space * 2
      width 66%
      &__item
        padding-bottom vertical-space * .5
      .rt-font-paragraph
        margin-bottom 5px
        &:not(:first-of-type)
          margin-top vertical-space

.{newAppName}-tabs-navigation
  display flex
  flex-direction row
  width calc(100% + 20px)
  margin-left -(vertical-space)
  margin-right -(vertical-space)

  .rt-tabs-tablet &,
  .rt-tabs-mobile &
    display block
    overflow auto
    white-space nowrap
    position relative

.{newAppName}-tabs-navigation-wrapper
  .rt-tabs-tablet &,
  .rt-tabs-mobile &
    display block
    overflow hidden
    position relative

.{newAppName}-tabs-navigation__item
  padding-left vertical-space
  padding-right vertical-space
  cursor pointer

  .rt-tabs-tablet &,
  .rt-tabs-mobile &
    display inline-block

.{newAppName}-tabs-navigation__item-name
  box-sizing border-box
  text-align inherit
  border none
  outline none
  padding-bottom horizontal-space * .5
  position relative

  &:before
    content ""
    width 0
    height 2px
    text-shadow 0 0 0
    border-bottom 2px solid transparent
    position absolute
    bottom -1px
    left 0
    right 0
    transition-timing-function ease-in-out
    transition-duration .2s
    transition-property border, width, text-shadow

  &:hover,
  &:focus,
  .{newAppName}-tabs-navigation__item--is-active &
    &:before
      width 100%
      border-bottom-color b2c-purple

  .{newAppName}-tabs-navigation__item--is-active &
    cursor default

  cursor pointer
