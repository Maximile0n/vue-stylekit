.{newAppName}-annotation {
    font-size: 12px;
    &__arrow {
        fill b2c-dark
        transition-timing-function: ease-in-out;
        transition-property: fill;
        transition-duration: 0.2s;
        .{newAppName}-annotation--white-color,
        .{newAppName}-dark-theme & {
            fill b2b-white
        }
    }
    &__title {
        cursor: pointer;
        position: relative;
        display: inline-block;
        padding-left: 20px
        &:before {
            content: ''
            position: absolute
            bottom: -2px
            width: calc(100% - 20px)
            height: 1px
            left: 20px
            background-color: b2b-black03
            transition-timing-function: cubic-bezier(1, .2, .9, .65);
            transition-property: width;
            transition-duration: 0.2s;
            .{newAppName}-annotation--is-open & {
                width: 0
            }
            .{newAppName}-annotation--white-color &,
            .{newAppName}-dark-theme & {
                background-color: b2b-white03
            }

        }
        .{newAppName}-annotation--is-open & {
            text-decoration: none
        }
    }
    &__arrow {
        position: absolute;
        left: 0px;
        top: 0;
        bottom: 0;
        margin-top: auto;
        margin-bottom: auto;
        transition-timing-function: ease-in-out;
        transition-property: transform;
        transition-duration: 0.3s;
        transform: rotate(-90deg);
        .{newAppName}-annotation--white-color & {
            fill: rgba(#ffffff, 0.5);
        }
        .{newAppName}-annotation--is-open & {
            transform: rotate(0deg);
        }

    }
    &__content {
        max-height: 0px;
        padding-top: 0;
        padding-left: horizontal-space;
        transition-timing-function: cubic-bezier(10, 2, .9, .65);
        transition-property: max-height, padding;
        transition-duration: 0.3s;
        overflow: hidden;
        color: b2b-black05;
        position: relative
        .{newAppName}-dark-theme & {
            color: b2b-white
        }
        &:before {
            content: ''
            background-color: b2b-black01
            width: 1px
            height: 0
            transition-timing-function: ease-in-out;
            transition-property: height;
            transition-duration: 0.3s;
            position: absolute
            left: 6px
            top: 40px
            .{newAppName}-annotation--white-color & {
                background-color: b2b-white03
            }
            .{newAppName}-annotation--is-open & {
                height: calc(100% - 40px)
            }
            .{newAppName}-annotation--white-color &,
            .{newAppName}-dark-theme & {
                background-color: b2b-white05
            }

        }
        .{newAppName}-annotation--white-color {
            color: b2b-white05;
        }

        .{newAppName}-annotation--is-open & {
            max-height: 300vh;
            padding-top: 20px;
        }
    }

    &-item {
        padding-top: horizontal-space;
    }
}

