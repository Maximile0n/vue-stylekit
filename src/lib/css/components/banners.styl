.grid-center
  display none
  width 1px
  height 100vh
  background-color red
  margin-left auto
  margin-right auto
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 1000

.{newAppName}-banner
  height 500px
  position relative
  z-index 3
  transition-timing-function ease-in-out
  transition-duration .3s
  transition-property background-color, color

  &-video
    &__content
      width 100%
      height 100%
      object-fit cover

      .rt-banner--full-screen &
        width 100%
        position absolute
        top 0
        bottom 0
        left 0
        right 0

  &--fill-height
    height 100vh

    .rt-banner-content
      height 100vh

  &--background
    &-dark-state
      width 100%
      background-color b2b-dark-state

    &-yellow
      width 100%
      background-color b2c-yellow

    &-red
      width 100%
      background b2c-red

    &-dark-blue
      width 100%
      background b2c-dark-blue

    &-purple-low
      width 100%
      background b2c-purple

    &-light-blue
      width 100%
      background b2c-light-blue

    &-orange
      width 100%
      background b2c-orange

    &-pink
      width 100%
      background b2c-pink

    &-green
      width 100%
      background b2c-green

  &-triangle
    width 185px
    height 100%
    margin-left 0
    position absolute
    top 0
    left -1px
    z-index 10
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property fill
    fill transparent

    .{newAppName}-banner--background-dark-state &
      fill b2b-dark-state

    .{newAppName}-banner--background-yellow &
      fill b2c-yellow

    .{newAppName}-banner--background-red &
      fill b2c-red

    .{newAppName}-banner--background-dark-blue &
      fill b2c-dark-blue

    .{newAppName}-banner--background-purple-low &
      fill b2c-purple


    .{newAppName}-banner--background-light-blue &
      fill b2c-light-blue

    .{newAppName}-banner--background-orange &
      fill b2c-orange

    .{newAppName}-banner--background-pink &
      fill b2c-pink

    .{newAppName}-banner--background-green &
      fill b2c-green

  &-right-triangle
    display none
    width 185px
    height 100%
    position absolute
    top 0
    right -1px
    z-index 10
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property fill
    fill transparent

    .{newAppName}-banner--background-red &
      fill b2c-red

    .{newAppName}-banner--background-dark-blue &
      fill b2c-dark-blue

    .{newAppName}-banner--background-light-blue &
      fill b2c-light-blue

    .{newAppName}-banner--background-purple-low &
      fill b2c-purple

    .{newAppName}-banner--background-yellow &
      fill b2c-yellow

    .{newAppName}-banner--background-orange &
      fill b2c-orange

    .{newAppName}-banner--background-pink &
      fill b2c-pink

    .{newAppName}-banner--background-green &
      fill b2c-green

    .{newAppName}-banner--background-dark-state &
      fill b2b-dark-state

    .{newAppName}-banner--background-yellow &
      fill b2c-yellow

    .{newAppName}-banner--orange &
      fill b2c-orange

    .{newAppName}-banner--dark-blue &
      fill b2c-dark-blue

    .{newAppName}-banner--light-blue &
      fill b2c-light-blue

    .{newAppName}-banner--light-blue &
      fill b2c-light-blue

    transform rotate(180deg)

    @media (min-width: 1550px) and (max-width: 1920px)
      display block
      right calc(80vw - 1550px)

    @media (min-width: 1920px)
      display block
      right -2px

  &--color-white
    color white

  &-content
    display flex
    align-items center
    height 500px
    line-height 1.5
    opacity 0
    visibility hidden
    position absolute
    top 0
    bottom 0
    z-index 3
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property opacity, visibility
    justify-items center

    &__link
      width 100%
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 15

    .rt-col-4 &
      min-width 430px
      max-width 500px
      @media (max-width: tablet-step-size)
        min-width 100%
      @media (max-width: mobile-step-size)
        min-width initial
        max-width initial

    @media (max-width: mobile-step-size)
      width 100%

      .{newAppName}-banner--full-screen &
        justify-content center

      .{newAppName}-banner--full-screen.justify-left &
        justify-content left

    &--active
      opacity 1
      visibility visible

  &-logo
    text-align right
    position absolute
    bottom 30px
    left 0
    right 0
    z-index 2

    @media (max-width: mobile-step-size)
      display none

  &-image
    width 55vw
    height 100%
    overflow hidden
    background-position center center
    background-size cover
    position relative
    position absolute
    top 0
    bottom 0
    left 45vw
    z-index 1
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property background-image
    -webkit-background-size cover

    &:before
      content ""
      display block
      width 4px
      height 100%
      position absolute
      left -4px

    &:after
      content ""
      display block
      width 4px
      height 100%
      position absolute
      right -4px

    &:before,
    &:after
      .{newAppName}-banner--background-dark-state &
        background-color b2b-dark-state

      .{newAppName}-banner--background-yellow &
        background-color b2c-yellow

      .{newAppName}-banner--background-red &
        background-color b2c-red

      .{newAppName}-banner--background-dark-blue &
        background-color b2c-dark-blue

      .{newAppName}-banner--background-light-blue &
        background-color b2c-light-blue

      .{newAppName}-banner--background-orange &
        background-color b2c-orange

      .{newAppName}-banner--background-pink &
        background-color b2c-pink

      .{newAppName}-banner--background-green &
        background-color b2c-green

    .{newAppName}-banner--full-screen &
      width 100vw
      overflow-y hidden
      left 0
      right 0

      &:before,
      &:after
        display none

    @media (max-width: mobile-step-size)
      display none

      .{newAppName}-banner--full-screen &
        display block

    @media (min-width: 1500px)
      max-width 1024px

      .{newAppName}-banner--full-screen &
        max-width 100vw

.circle-switcher
  text-align center
  text-align center
  position absolute
  bottom 30px
  left 0
  right 0
  z-index 20

  &-container
    display inline-block

  &__item
    display inline-block
    width 20px
    height 20px
    box-sizing border-box
    position relative
    z-index 3
    cursor pointer
    animation-duration 5s
    animation-play-state running

    &:before
      content ""
      width 10px
      height 10px
      box-sizing border-box
      border 1px solid #fff
      border-radius 50%
      margin auto
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      transition-timing-function ease-in-out
      transition-duration .3s
      transition-property background-color, width, height, border, margin, left, right
      animation-play-state paused

    & + &
      margin-left horizontal-space

  &__icon
    width inherit
    height inherit
    transform rotate(-90deg)
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property stroke-dasharray, stroke-width
    stroke #fff
    stroke-dasharray 0
    stroke-width 0
    .rt-banner--is-stopped &
      animation none!important
    .circle-switcher__item:hover &
      stroke-dasharray 60
      stroke-width .5px

    .{newAppName}-banner--run-timer &
      animation-name switcherRound
      animation-duration inherit
      animation-timing-function linear
      stroke-dasharray 60
      stroke-width .5px
    .{newAppName}-banner--pause &
      animation none
      animation-play-state paused
      stroke-dashoffset 120 !important

      &.{newAppName}-banner--run-timer
        cursor default
        stroke-width .5px

.circle-switcher__item.{newAppName}-banner--run-timer.{newAppName}-banner--pause
  cursor default

  &:before
    content ""
    width 2px
    height 8px
    background-color #fff
    border-width 0
    border-radius 0
    margin-top auto
    margin-bottom auto
    position absolute
    top 0
    bottom 0
    left inherit
    left 7px
    right inherit

  &:after
    content ""
    width 2px
    height 8px
    background-color #fff
    border-radius 0
    margin-top auto
    margin-bottom auto
    position absolute
    top 0
    bottom 0
    right 7px

@keyframes switcherRound
  0%
    stroke-dashoffset 180

  100%
    stroke-dashoffset 120
