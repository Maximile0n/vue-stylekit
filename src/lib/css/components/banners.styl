.circle-switcher
  text-align center
  text-align center
  position absolute
  bottom 30px
  left 0
  right 0
  z-index 20
  &--top
    bottom: inherit
    top: 30px

  &-container
    display inline-block

  &__item
    display inline-block
    width 20px
    height 20px
    box-sizing border-box
    position relative
    z-index 3
    cursor pointer
    animation-duration 5s
    animation-play-state running

    &:before
      content ""
      width 10px
      height 10px
      box-sizing border-box
      border 1px solid #fff
      border-radius 50%
      margin auto
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      transition-timing-function ease-in-out
      transition-duration .3s
      transition-property background-color, width, height, border, margin, left, right
      animation-play-state paused

    & + &
      margin-left horizontal-space

  &__icon
    width inherit
    height inherit
    transform rotate(-90deg)
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property stroke-dasharray, stroke-width
    stroke #fff
    stroke-dasharray 0
    stroke-width 0
    .rt-banner--is-stopped &
      animation none!important
    .circle-switcher__item:hover &
      stroke-dasharray 60
      stroke-width .5px

    .{newAppName}-banner--run-timer &
      animation-name switcherRound
      animation-duration inherit
      animation-timing-function linear
      stroke-dasharray 60
      stroke-width .5px
    .{newAppName}-banner--pause &
      animation none
      animation-play-state paused
      stroke-dashoffset 120 !important

      &.{newAppName}-banner--run-timer
        cursor default
        stroke-width .5px
.rt-banner-arrow
  position: absolute
  top: 0
  bottom: 0
  margin-top: auto
  margin-bottom: auto
  z-index: 10
  height: 63px
  cursor: pointer
  opacity: .7
  transition-timing-function ease-in-out
  transition-duration .3s
  transition-property opacity
  @media (max-width: tablet-step-size)
    display: none
  &--next
    right: 30px
  &--preview
    left: 30px
  &:hover
    opacity: 1
.circle-switcher__item.{newAppName}-banner--run-timer.{newAppName}-banner--pause
  cursor default

  &:before
    content ""
    width 2px
    height 8px
    background-color #fff
    border-width 0
    border-radius 0
    margin-top auto
    margin-bottom auto
    position absolute
    top 0
    bottom 0
    left inherit
    left 7px
    right inherit

  &:after
    content ""
    width 2px
    height 8px
    background-color #fff
    border-radius 0
    margin-top auto
    margin-bottom auto
    position absolute
    top 0
    bottom 0
    right 7px

@keyframes switcherRound
  0%
    stroke-dashoffset 180

  100%
    stroke-dashoffset 120
