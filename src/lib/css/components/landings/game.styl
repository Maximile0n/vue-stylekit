.color-block--game
  background-color: b2c-promo-game
  background-size: cover
  background-position: center


.{landing-name}-game
  min-height: 100vh

.rt-l-game__logo
  width: 285
  height: 87px
  position: absolute
  top: 27px
  left: 10px
  @media (max-width: mobile-step-size)
    width: 167px

.rt-l-internet-speed
  text-align: left

.rt-l-internet-speed__value
  font-size: 68px
  font-weight: 200
  line-height: 60px

.rt-l-internet-speed__text
  color b2c-white07

.rt-l-bottom-scroll-arrow
  position: absolute
  z-index: 10
  bottom: 35px
  left: 0
  right: 0
  margin-left: auto
  margin-right: auto
  animation-name bottomArrow
  animation-duration inherit
  animation-timing-function linear
  animation-iteration-count: infinite
  animation-duration 4s


@keyframes bottomArrow
  0%
    bottom: 35px
  25%
    bottom: 25px
  50%
    bottom: 35px
  75%
    bottom: 45px
  100%
    bottom: 35px


.rt-l-game-space
  min-height: 150px
  max-height: 180px
