.{newAppName}-button
  height 49px
  box-sizing border-box
  font-size 16px
  text-align center
  text-transform none
  border-radius 5px
  box-shadow 0 2px 5px rgba(0, 0, 0, 0)
  margin 0
  padding-left horizontal-space
  padding-right horizontal-space
  cursor pointer
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, box-shadow, border, text-shadow, color, opacity

  &[disabled]
    box-shadow none !important

  &--is-fitched
    color transparent !important

  &--is-block
    display block
    min-width 100%

  .ripple-wave
    background-color default-wive-color

  &-with-ripple
    overflow hidden
    padding-left 0
    padding-right 0

  & + &
    margin-left horizontal-space

  &-vertical
    display table

    & + &
      margin-top vertical-space
      margin-left 0

  &-small
    height 34px
    font-size 14px

    .ripple
      padding-left 12px
      padding-right 12px

  &-md-small
    @media (max-width: mobile-step-size)
      height 34px
      font-size 14px

      .ripple
        padding-left 12px
        padding-right 12px

  &:before
    display none
    opacity 0

  &-orange
    color #fff
    background-color b2c-orange-low

    &.{newAppName}-button-no-wive &:active
      background-color b2b-orange-low

    &:hover,
    &:focus
      box-shadow 0 2px 5px rgba(0, 0, 0, .2), inset 0 2px 100px rgba(0, 0, 0, .1)

    &[disabled]
      background-color disable-button-color

      .{newAppName}-dark-theme &
        background-color disable-button-color-dark-theme

    .ripple-wave
      background-color color-button-wive-color

  &-orange-border
    color b2c-orange-low
    background-color transparent
    border 2px solid b2c-orange-low

    &.{newAppName}-button-no-wive &:active
      background-color transparent !important

    &[disabled]
      color disable-button-color !important
      border-color disable-button-color !important

    &:hover,
    &:focus
      color b2b-orange-low
      border-color b2b-orange-low

    .ripple-wave
      background-color b2b-orange-low

  &-white
    border 2px solid white

    &:focus,
    &:hover
      opacity .7

  &-purple
    color #fff
    background-color b2c-purple-low

    &.{newAppName}-button-no-wive &:active
      background-color b2b-purple-low

    &:hover,
    &:focus
      box-shadow 0 2px 5px rgba(0, 0, 0, .2), inset 0 2px 100px rgba(0, 0, 0, .1)

    &[disabled]
      background-color disable-button-color

      .{newAppName}-dark-theme &
        background-color disable-button-color-dark-theme

    .ripple-wave
      background-color color-button-wive-color

  &-purple-border
    color b2c-purple-low
    background-color transparent
    border 2px solid b2c-purple-low

    .ripple
      box-shadow none

    &[disabled]
      border-color disable-button-color

    &:hover,
    &:focus
      color b2b-purple-low
      border-color b2b-purple-low

    .ripple-wave
      background-color b2b-purple-low

    &[disabled]
      color disable-button-color
      border-color disable-button-color

  &-transparent
    &[disabled]
      color disable-button-color

    &:hover,
    &:focus
      opacity .7
