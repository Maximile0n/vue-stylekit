.{newAppName}-button
  height 49px
  box-sizing border-box
  font-size 16px
  text-align center
  text-transform none
  border-radius 5px
  box-shadow 0 2px 5px rgba(0, 0, 0, 0)
  margin 0
  padding-left horizontal-space
  padding-right horizontal-space
  cursor pointer
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, box-shadow, border, text-shadow, color, opacity

  &[disabled]
    box-shadow none !important
    cursor default

  &--is-fitched
    color transparent !important

  &--is-block
    display block
    min-width 100%

  .ripple-wave
    background-color default-wive-color

  &-with-ripple
    overflow hidden
    padding-left 0
    padding-right 0

  & + &
    margin-left horizontal-space

  &-vertical
    display table

    & + &
      margin-top vertical-space
      margin-left 0

  &-small
    height 34px
    font-size 14px

    .ripple
      padding-left 10px
      padding-right 10px

  &-md-small
    @media (max-width: mobile-upper-limit)
      height 34px
      font-size 14px

      .ripple
        padding-left 10px
        padding-right 10px

  &:before
    display none
    opacity 0

  &-orange
    color #fff
    background-color b2c-orange

    &.{newAppName}-button-no-wive &:active
      background-color b2c-orange-low

    &:hover,
    &:focus
      background-color b2c-orange-high
      box-shadow 0 2px 5px rgba(0, 0, 0, .2)

    &[disabled]
      color white
      background-color main-color01

      .{newAppName}-dark-theme &
        color b2c-white03
        background-color b2c-white01
        border-color b2c-white

    .ripple-wave
      background-color b2c-white

  &-orange-border
    color b2c-orange
    background-color transparent
    border 2px solid b2c-orange

    &.{newAppName}-button-no-wive &:active
      background-color transparent !important

    &:hover,
    &:focus
      color b2c-orange-low
      background-color rgba(b2c-orange, .1)
      border-color b2c-orange-low

    &[disabled]
      color main-color01
      border-color main-color01

      &:focus,
      &:hover
        background-color transparent

      .{newAppName}-dark-theme &
        color b2c-white03
        border-color b2c-white03

    .ripple-wave
      background-color b2c-orange-low

    .ripple
      padding 0 18px

    .fake-radiobutton-for-button:checked+&
      color b2c-white
      background-color b2c-orange

      .original-text
        display none

      .checked-text
        display inline

  &-white
    border 2px solid white

    &:focus,
    &:hover
      background-color b2c-cool-grey05
      opacity .7

      .{newAppName}-dark-theme &
        background-color b2c-white01

    &:active
      background-color transparent

    &[disabled]
      color main-color01

      &:hover
        background-color transparent

      .{newAppName}-dark-theme &
        color b2c-white03 !important
        border-color white
        opacity 1

      .ripple-wave
        background-color b2c-cool-grey

  &-purple
    color #fff
    background-color b2c-purple

    &.{newAppName}-button-no-wive &:active
      background-color b2c-purple-low

    &:hover,
    &:focus
      background-color b2c-purple-high
      box-shadow 0 2px 5px rgba(0, 0, 0, .2)

    &[disabled]
      color white
      background-color main-color01

      .{newAppName}-dark-theme &
        color b2c-white03
        background-color b2c-white01

    .ripple-wave
      background-color b2c-white

  &-purple-border
    color b2c-purple
    background-color transparent
    border 2px solid b2c-purple

    .ripple
      box-shadow none

    &[disabled]
      color main-color01
      border-color main-color01

      .{newAppName}-dark-theme &
        color b2c-white03
        border-color b2c-white03

      &:focus,
      &:hover
        background-color transparent

    &:hover,
    &:focus
      color b2c-purple-low
      background-color hsl(rgba(b2c-purple, .1))
      border-color b2c-purple-low

    .ripple-wave
      background-color b2c-purple-low

    &[disabled]
      color main-color01
      border-color main-color01

    .ripple
      padding 0 18px

    .fake-radiobutton-for-button:checked+&
      color b2c-white
      background-color b2c-purple

      .original-text
        display none

      .checked-text
        display inline

  &-transparent
    border 2px solid transparent

    &:focus,
    &:hover
      background-color b2c-cool-grey05
      opacity .7

      .{newAppName}-dark-theme &
        background-color b2c-white01

    &:active
      background-color transparent

    &[disabled]
      color main-color01

      &:hover
        background-color transparent

      .{newAppName}-dark-theme &
        color b2c-white03 !important
        border-color transparent
        opacity 1

      .ripple-wave
        background-color b2c-cool-grey

  &-cool-grey-border
    border 2px solid b2c-cool-grey

    &:focus,
    &:hover
      background-color b2c-cool-grey05
      opacity .7

      .{newAppName}-dark-theme &
        background-color b2c-white01

    .ripple
      padding 0 18px

    .fake-radiobutton-for-button:checked+&
      color b2c-white
      background-color b2c-cool-grey

      .original-text
        display none

      .checked-text
        display inline

.fake-radiobutton-for-button
  display none

.original-text
  display inline

.checked-text
  display none
