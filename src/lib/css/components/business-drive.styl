@keyframes fadeIn1
  //0%
  //  transform translateY(150px)
  //  opacity 0
  50%
    opacity .1
  100%
    transform translateY(0)
    opacity 1

@keyframes fadeIn2
  0%
    opacity 0
  100%
    opacity 1

@keyframes lineThrough1
  0%
    width 0
  100%
    width 100%

@keyframes bounce
  0%
    transform scale(1)
    opacity .8
  50%
    opacity 1
    transform scale(1.015)
  100%
    opacity 1
    transform scale(1)
