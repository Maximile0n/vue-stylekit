.business-drive
  position relative
  top 50px
  &__header
    padding 10px 0
    position fixed
    top 50px
    left 0
    right 0
    z-index 20
    .button-wrapper
      margin-top 5px
  &__footer
    padding 20px 0
  &__footer-link
    margin-left 30px
  &__tabs-wrapper
