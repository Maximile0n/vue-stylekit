.rt-timeline
  position relative
  &:after
    position absolute
    content: ''
    top 0
    bottom 0
    width 8px
    background-color b2c-orange
    left calc((100% - 8px) / 2)
  &__item
    color b2c-white
    font-weight 500
    width 50%
    margin-left 50%
    padding-left 10px
    position relative
    .rt-timeline__item-image-wrapper
      left 200px
    &:nth-child(2n - 1)
      text-align: right
      margin-left: 0
      padding-right 10px
      padding-left: 0
      .rt-timeline__item-image-wrapper
        right 200px
        left auto
    .timestamp
      position relative
      padding-top 5px
      padding-bottom 2px
      width 177px
      display: inline-block
      font-weight 500
      &:before,
      &:after
        position absolute
        content ''
        width 100%
        height 4px
        background-color b2c-white
        left 0
      &:before
        top 0
      &:after
        bottom 0
      &-wrapper
        z-index 2
        position relative
    &--important
      .timestamp
        color b2c-orange
        font-size 56px
        padding-bottom 0
        width 232px
        &:before,
        &:after
          background-color b2c-orange
          height 8px
      .rt-timeline__item-theme,
      .rt-timeline__item-speaker
        text-align left
    &-image
      width 100%
      height 100%
      background-position 50% 50%
      background-size: cover
      &-wrapper
        width 275px
        height 183px
        position absolute
        top -94px
        z-index 1
    .rt-timeline__item-speaker
      margin-top vertical-space
    &-description,
    &-reputation
      display none

