.animated-text
  font-size 114px
  line-height 103px
  height 800px
  padding-top 90px
  box-sizing border-box
  display flex
  flex-direction column
  &__line
    opacity 0
    &-item
      position relative
      &:after
        position absolute
        content: ''
        top 50%
        left 0
        width 0
        height 20px
        background-color b2c-orange
        transform translateY(-50%)
  &__first-line
    transform translateY(100%)
    opacity 0
    animation fadeIn1 .5s .3s ease-out forwards
  &__second-line
    transform translateY(140%)
    opacity 0
    animation fadeIn1 .5s .3s ease-out forwards
    .animated-text__line-item
      &:after
        animation lineThrough1 .4s .5s ease-out forwards
  &__third-line
    transform translateY(180%)
    opacity 0
    animation fadeIn1 .5s .3s ease-out forwards
    .animated-text__line-item
      &:after
        animation lineThrough1 .4s .7s ease-out forwards
  &__fourth-line
    transform translateY(220%)
    opacity 0
    animation fadeIn1 .5s .3s ease-out forwards
    .animated-text__line-item
      &:after
        animation lineThrough1 .4s .9s ease-out forwards
  &__fifth-line
    transform translateY(380%)
    opacity 0
    animation fadeIn1 .5s .5s ease-out forwards
  &__sixth-line
    animation fadeIn2 .4s 1.2s linear forwards
  &__seventh-line
    animation fadeIn2 .4s 1.4s linear forwards
  &__eighth-line
    font-size 32px
    line-height 40px
    margin-top 30px
    animation fadeIn2 .4s 1.7s linear forwards
    .meeting-legend
      padding-left 40px
      position relative
      display inline-block
      opacity .8
      animation bounce .5s 2.1s linear forwards
      &:nth-child(2)
        margin-left 30px
      .icon
        position absolute
        left 0
        top 5px
        width 30px
        height 30px
  &__footnote
    font-size 32px
    line-height 40px
    top 40px
    right -40px
    position absolute
    min-width 240px
    transform translateX(100%)

